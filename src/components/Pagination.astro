---
interface Props {
  currentPage: number;
  totalPages: number;
  prevUrl?: string;
  nextUrl?: string;
}

const { currentPage, totalPages, prevUrl, nextUrl } = Astro.props;
---

<nav
  class="grid grid-cols-3 items-center mt-8 pt-4"
>
  <div class="justify-self-start">
    {
      prevUrl && (
        <a href={prevUrl} class="text-blue-600 dark:text-blue-400 hover:underline">
          ← Newer
        </a>
      )
    }
  </div>
  <span class="justify-self-center text-zinc-600 dark:text-zinc-400">
    Page {currentPage} of {totalPages}
  </span>
  <div class="justify-self-end">
    {
      nextUrl && (
        <a href={nextUrl} class="text-blue-600 dark:text-blue-400 hover:underline">
          Older →
        </a>
      )
    }
  </div>
</nav>

