---
interface Props {
  currentPage: number;
  totalPages: number;
  prevUrl?: string;
  nextUrl?: string;
}

const { currentPage, totalPages, prevUrl, nextUrl } = Astro.props;
---

<nav
  class="flex justify-between items-center mt-8 pt-4 border-t border-zinc-200 dark:border-zinc-800"
>
  <div>
    {
      prevUrl && (
        <a href={prevUrl} class="text-blue-600 dark:text-blue-400 hover:underline">
          ← Newer
        </a>
      )
    }
  </div>
  <span class="text-zinc-600 dark:text-zinc-400">Page {currentPage} of {totalPages}</span>
  <div>
    {
      nextUrl && (
        <a href={nextUrl} class="text-blue-600 dark:text-blue-400 hover:underline">
          Older →
        </a>
      )
    }
  </div>
</nav>

